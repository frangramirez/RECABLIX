---
import StudioLayout from '@/layouts/StudioLayout.astro'
import { ClientsTable } from '@/components/studio/ClientsTable'
---

<StudioLayout title="Clientes">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <h1 class="text-2xl font-bold text-gray-900">Clientes</h1>
      <div class="flex gap-2">
        <a
          href="/studio/clients/import"
          class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium hover:bg-gray-50 transition-colors"
        >
          Importar Excel
        </a>
        <a
          href="/studio/clients/new"
          class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium hover:bg-blue-700 transition-colors"
        >
          Nuevo Cliente
        </a>
      </div>
    </div>
    <ClientsTable client:load />
  </div>
</StudioLayout>
