---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { LoginForm } from '@/components/auth/LoginForm'
---

<BaseLayout title="Iniciar Sesión">
  <main class="min-h-screen flex items-center justify-center bg-muted/30 p-4">
    <div class="w-full max-w-md">
      <!-- Logo Contablix y título -->
      <div class="text-center mb-8">
        <!-- Isotipo CX de Contablix -->
        <div class="inline-flex items-center justify-center mb-4">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 64 64"
            fill="none"
            width="56"
            height="56"
            aria-label="Contablix"
          >
            <path
              d="M12 32c0-11 8-20 19-20 5 0 9 1.5 12 4l-6.5 8c-1.5-1.5-3.5-2.5-5.5-2.5-6 0-9 4.5-9 10.5s3 10.5 9 10.5c2 0 4-1 5.5-2.5l6.5 8c-3 2.5-7 4-12 4-11 0-19-9-19-20z"
              fill="#14315d"
            />
            <path
              d="M32 24l7-10h10l-12 16 12 16h-10l-7-10-7 10h-10l12-16-12-16h10l7 10z"
              fill="#14315d"
            />
            <polygon points="44,14 56,14 52,20 40,20" fill="#00b67a" />
          </svg>
        </div>
        <h1 class="text-2xl font-semibold text-foreground">RECABLIX</h1>
        <p class="text-muted-foreground text-sm mt-1">
          Asistente de Recategorización de Monotributo
        </p>
      </div>

      <!-- Formulario -->
      <LoginForm client:load />

      <!-- Footer -->
      <p class="text-center text-xs text-muted-foreground mt-8">
        ¿Problemas para ingresar? Contactá a tu administrador.
      </p>
    </div>
  </main>
</BaseLayout>
