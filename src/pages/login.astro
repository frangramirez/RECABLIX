---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { LoginForm } from '@/components/auth/LoginForm'
---

<BaseLayout title="Iniciar Sesión">
  <main class="min-h-screen flex items-center justify-center bg-muted/30 p-4">
    <div class="w-full max-w-md">
      <!-- Logo Contablix y título -->
      <div class="text-center mb-8">
        <!-- Isotipo CX de Contablix -->
        <div class="inline-flex items-center justify-center mb-4">
          <img
            src="/logo-isotipo.png"
            alt="Contablix"
            width="56"
            height="56"
            class="object-contain"
          />
        </div>
        <h1 class="text-2xl font-semibold text-foreground">RECABLIX</h1>
        <p class="text-muted-foreground text-sm mt-1">
          Asistente de Recategorización de Monotributo
        </p>
      </div>

      <!-- Formulario -->
      <LoginForm client:load />

      <!-- Footer -->
      <p class="text-center text-xs text-muted-foreground mt-8">
        ¿Problemas para ingresar? Contactá a tu administrador.
      </p>
    </div>
  </main>
</BaseLayout>
