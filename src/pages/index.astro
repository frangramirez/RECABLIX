---
import BaseLayout from '@/layouts/BaseLayout.astro'
import { Button } from '@/components/ui/button'
---

<BaseLayout title="Inicio">
  <main class="min-h-screen flex flex-col items-center justify-center bg-background p-8">
    <div class="text-center space-y-8 max-w-2xl">
      <!-- Logo -->
      <div class="inline-flex items-center justify-center w-16 h-16 rounded-2xl bg-primary text-primary-foreground font-bold text-2xl shadow-lg">
        R
      </div>

      <!-- Título y descripción -->
      <div class="space-y-3">
        <h1 class="text-4xl font-bold tracking-tight text-foreground">
          RECABLIX
        </h1>
        <p class="text-xl text-muted-foreground max-w-md mx-auto">
          Asistente de Recategorización de Monotributo para Estudios Contables
        </p>
      </div>

      <!-- Features destacados -->
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm">
        <div class="flex flex-col items-center gap-2 p-4 rounded-xl bg-muted/50">
          <div class="w-10 h-10 rounded-lg bg-chart-1/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-chart-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
            </svg>
          </div>
          <span class="font-medium text-foreground">Cálculos Automáticos</span>
          <span class="text-muted-foreground text-xs text-center">Categorías y cuotas según ARCA</span>
        </div>

        <div class="flex flex-col items-center gap-2 p-4 rounded-xl bg-muted/50">
          <div class="w-10 h-10 rounded-lg bg-chart-2/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-chart-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <span class="font-medium text-foreground">Gestión de Clientes</span>
          <span class="text-muted-foreground text-xs text-center">Hasta 1500 monotributistas</span>
        </div>

        <div class="flex flex-col items-center gap-2 p-4 rounded-xl bg-muted/50">
          <div class="w-10 h-10 rounded-lg bg-chart-4/10 flex items-center justify-center">
            <svg class="w-5 h-5 text-chart-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <span class="font-medium text-foreground">Reportes PDF</span>
          <span class="text-muted-foreground text-xs text-center">Informes profesionales</span>
        </div>
      </div>

      <!-- CTA -->
      <div class="flex flex-col sm:flex-row gap-3 justify-center pt-4">
        <a href="/login">
          <Button size="lg" className="w-full sm:w-auto">
            Iniciar Sesión
          </Button>
        </a>
      </div>
    </div>

    <!-- Footer -->
    <footer class="absolute bottom-6 text-center text-xs text-muted-foreground">
      <p>RECABLIX v1.0 · Contablix 2026</p>
    </footer>
  </main>
</BaseLayout>
