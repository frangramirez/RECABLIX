---
import BaseLayout from '@/layouts/BaseLayout.astro'
---

<BaseLayout title="Inicio">
  <main class="min-h-screen flex flex-col items-center justify-center p-8">
    <div class="text-center space-y-6">
      <h1 class="text-4xl font-bold text-primary">RECABLIX</h1>
      <p class="text-xl text-muted-foreground max-w-md">
        Asistente de Recategorización de Monotributo para Estudios Contables
      </p>
      <div class="flex gap-4 justify-center">
        <a
          href="/login"
          class="px-6 py-3 bg-primary text-primary-foreground rounded-lg font-medium hover:bg-primary/90 transition-colors"
        >
          Iniciar Sesión
        </a>
      </div>
    </div>
  </main>
</BaseLayout>
