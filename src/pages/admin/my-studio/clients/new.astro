---
import AdminLayout from '@/layouts/AdminLayout.astro'
import { ClientForm } from '@/components/studio/ClientForm'

const studioId = Astro.locals.studio?.id
if (!studioId) {
  return Astro.redirect('/admin/my-studio/setup')
}
---

<AdminLayout title="Nuevo Cliente">
  <div class="space-y-6">
    <div class="flex items-center gap-4">
      <a href="/admin/my-studio/clients" class="text-muted-foreground hover:text-foreground">
        &larr; Volver a clientes
      </a>
    </div>
    <h1 class="text-2xl font-bold">Nuevo Cliente</h1>
    <ClientForm client:load studioId={studioId} />
  </div>
</AdminLayout>
