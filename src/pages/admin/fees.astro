---
import AdminLayout from '@/layouts/AdminLayout.astro'
import { FeesManager } from '@/components/admin/FeesManager'
import { createSupabaseServerClient } from '@/lib/supabase'

const supabase = createSupabaseServerClient(Astro.cookies)
const { data: periods } = await supabase
  .from('reca_periods')
  .select('id, code, year, semester')
  .order('code', { ascending: false })
---

<AdminLayout title="Componente Provincial">
  <div class="space-y-6">
    <div>
      <h1 class="text-2xl font-bold text-foreground">Componente Provincial</h1>
      <p class="text-muted-foreground mt-1">
        Configura los componentes de Ingresos Brutos Provincial y Municipal por provincia y categor√≠a.
      </p>
    </div>
    <FeesManager client:load periods={periods || []} />
  </div>
</AdminLayout>
