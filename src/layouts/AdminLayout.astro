---
import { AdminSidebar } from '@/components/admin/AdminSidebar'
import { AdminHeader } from '@/components/admin/AdminHeader'
import { SessionInit } from '@/components/providers/SessionProvider'
import { Toaster } from '@/components/ui/sonner'
import { supabaseAdmin } from '@/lib/supabase'

interface Props {
  title?: string
}

const { title = 'Admin' } = Astro.props

// Obtener studio desde middleware (ya verificado como superadmin)
const studio = Astro.locals.studio
const studioData = studio
  ? {
      id: studio.id,
      name: studio.name,
      slug: studio.slug,
      is_superadmin: studio.is_superadmin,
      schema_name: studio.schema_name,
    }
  : null

// Obtener estudio del superadmin (su membresía, no la sesión)
let superadminStudioId: string | null = null
let superadminStudioName: string | null = null

if (studio?.is_superadmin && studio?.user_id && supabaseAdmin) {
  // El superadmin puede tener un estudio diferente al que viene en la sesión
  // Buscamos específicamente su membresía usando el user_id
  // Usamos limit(1) porque el usuario puede tener múltiples membresías
  const { data: memberships } = await supabaseAdmin
    .from('studio_members')
    .select('studio_id, studios(id, name)')
    .eq('user_id', studio.user_id)
    .limit(1)

  const membership = memberships?.[0]
  if (membership?.studios) {
    // studios puede ser un array o un objeto dependiendo de la relación
    const studioInfo = Array.isArray(membership.studios)
      ? membership.studios[0]
      : membership.studios
    if (studioInfo) {
      superadminStudioId = studioInfo.id
      superadminStudioName = studioInfo.name
    }
  }
}
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title} | RECABLIX Admin</title>
  <!-- Geist Font -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Geist:wght@400;500;600;700&family=Geist+Mono:wght@400;500&display=swap" rel="stylesheet" />
</head>
<body class="min-h-screen bg-muted/30">
  <!-- Inicializar sesión en el store -->
  <SessionInit client:load studio={studioData} />

  <div class="flex h-screen overflow-hidden">
    <!-- Sidebar -->
    <AdminSidebar client:load studioId={superadminStudioId} studioName={superadminStudioName} />

    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">
      <AdminHeader client:load />
      <main class="flex-1 overflow-y-auto p-6">
        <slot />
      </main>
    </div>
  </div>
  <Toaster client:load position="top-right" />
</body>
</html>

<style is:global>
  @import "../styles/globals.css";
</style>
